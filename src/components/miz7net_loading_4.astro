---
// src/components/AnimatedLogo.astro
---
<svg width="100%" viewBox="0 0 400 120" xmlns="http://www.w3.org/2000/svg" class="h-12 w-auto">
    <!-- グラデーション定義 -->
    <defs>
        <linearGradient id="gradLogo" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:rgb(59,130,246);stop-opacity:1"/>
            <stop offset="100%" style="stop-color:rgb(168,85,247);stop-opacity:1"/>
        </linearGradient>
    </defs>

    <!-- 左上のアイコン (ピリジン) -->
    <g transform="translate(10,10) scale(0.9)">
        <!-- ... (アイコンのパスデータは変更なし) ... -->
        <path d="M50 15 L85 35 L85 75 L50 95 L15 75 L15 35 Z"
              stroke="url(#gradLogo)" stroke-width="8" fill="none" stroke-linejoin="round"/>
        <path d="M 55 27 L 73 38   M 73 72 L 55 83   M 23 65 L 23 45"
              stroke="url(#gradLogo)" stroke-width="3" fill="none" stroke-linecap="round"/>
        <g>
            <rect x="40" y="77" width="20" height="30" fill="white"/>
            <animateTransform attributeName="transform" type="translate" from="0,0" to="0,100" begin="3.4s" dur="0.7s" fill="freeze"/>
        </g>
    </g>
    <g transform="translate(10,10) scale(0.9)">
        <text x="50" y="91"
              font-family="Inter, sans-serif" font-size="19" font-weight="bold"
              fill="url(#gradLogo)"
              text-anchor="middle"
              dominant-baseline="central">N
        </text>
        <animateTransform attributeName="transform" type="translate" from="5,0" to="0,400" begin="2.8s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- t -->
    <g>
        <text x="310" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        t
        <animate attributeName="opacity" from="0" to="1" begin="0.7s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- e -->
    <g>
        <text x="280" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        e
        <animate attributeName="opacity" from="0" to="1" begin="0.8s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- n -->
    <g>
        <text x="250" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        n
        <animate attributeName="opacity" from="0" to="1" begin="4.9s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="0,-175" to="0,0" begin="4.7s" dur="0.3s" fill="freeze"/>
    </g>

    <!-- . -->
    <g>
        <text x="232" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        .
        <animate attributeName="opacity" from="0" to="1" begin="1.0s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- 7 -->
    <g>
        <text x="205" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        7
        <animate attributeName="opacity" from="0" to="1" begin="1.1s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- z -->
    <g>
        <text x="178" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        z
        <animate attributeName="opacity" from="0" to="1" begin="1.2s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- i -->
    <g>
        <text x="162" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        i
        <animate attributeName="opacity" from="0" to="1" begin="1.3s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.7s" fill="freeze"/>
    </g>

    <!-- m -->
    <g>
        <text x="118" y="80"
              font-family="Inter, sans-serif" font-size="40" font-weight="bold"
              fill="url(#gradLogo)" opacity="0">
        m
        <animate attributeName="opacity" from="0" to="1" begin="1.4s" dur="0.001s" fill="freeze"/>
        </text>
        <animateTransform attributeName="transform" type="translate" from="-175,0" to="0,0" begin="0.7s" dur="0.72s" fill="freeze"/>
    </g>

    <!-- 下線 -->
    <rect x="118" y="90" width="0" height="3" fill="#d1d5db">
        <animate attributeName="width" from="0" to="220" begin="0.7s" dur="1.5s" fill="freeze"/>
    </rect>
</svg>